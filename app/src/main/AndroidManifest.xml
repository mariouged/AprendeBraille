<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.comoelagua.android.braille">

    <application
        android:name=".BrailleApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AprendeBraille">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AlphabetActivity"
            android:label="@string/title_activity_alphabet"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.comoelagua.android.braille.MainActivity" />
        </activity>
        <activity
            android:name=".WordExercisesActivity"
            android:label="@string/title_activity_word_exercises"
            android:windowSoftInputMode="stateVisible"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.comoelagua.android.braille.MainActivity" />
        </activity>
        <activity
            android:name=".PhraseExercisesActivity"
            android:label="@string/title_activity_phrase_exercises"
            android:windowSoftInputMode="stateVisible"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.comoelagua.android.braille.MainActivity" />
        </activity>
        <activity
            android:name=".CharactersExercisesActivity"
            android:label="@string/title_activity_characters_exercises"
            android:windowSoftInputMode="stateVisible"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.comoelagua.android.braille.MainActivity" />
        </activity>
        <activity
            android:name=".FontTestActivity"
            android:label="@string/title_activity_font_test"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.comoelagua.android.braille.MainActivity" />
        </activity>
        <activity
            android:name=".ResultsExercisesActivity"
            android:label="@string/title_activity_results_exercises"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.comoelagua.android.braille.MainActivity" />
        </activity>
        <activity
            android:name=".HelpActivity"
            android:label="@string/title_activity_help"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.comoelagua.android.braille.MainActivity" />
        </activity>
        <activity
            android:name=".NumbersExercisesActivity"
            android:label="@string/title_activity_numbers_exercises"
            android:windowSoftInputMode="stateVisible"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.comoelagua.android.braille.MainActivity" />
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.comoelagua.android.braille.MainActivity" />
        </activity>

    </application>

</manifest>